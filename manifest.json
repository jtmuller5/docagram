{
  "manifest_version": 3,
  "name": "Docagram",
  "description": "Generate relationship diagrams from page content using Chrome's built-in AI",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "sidePanel", "storage"],
  "host_permissions": ["<all_urls>"],
  "options_page": "settings.html",
  "action": {
    "default_title": "Open Docagram"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
